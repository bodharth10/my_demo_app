<!DOCTYPE html>
<html>
  <head>
    <title> Maropost - Start </title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-right">
           <% if user_signed_in? %>
              <li><a href="#"><%= current_user.email %></a></li>
              <li><%= link_to "Home",root_path ,class: cp('/') %></li>
              <li><%= link_to "Contact Us",contacts_path ,class: cp('/contacts') %></li>
              <li><%= link_to "About Us", home_about_us_path,class: cp('/home/about_us') %></li>
              <li><%= link_to "Gallery", photos_path,class: cp('/photos') %></li>
              <li><%= link_to "Edit Account", edit_user_registration_path %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => 'navbar-link red_bttn'  %></li>
           <% else %>
              <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link blue_bttn'%></li>
              <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link home_bttn'%></li>
           <% end %>
          </ul>
        </nav>
      </div>
    </header>
  </head>
 <body>
   <div class="container">
    <%= render 'layouts/messages' %> 
      <%= yield %> 
    <%= render 'layouts/footer' %>
   </div>
 </body>
</html>