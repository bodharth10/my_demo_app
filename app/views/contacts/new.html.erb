
 
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="well well-sm">
                   <%= simple_form_for @contact, :html => {:class => 'form-horizontal' },  wrapper: :horizontal_form  do |f| %>
                    <fieldset>
                        <legend class="text-center header">Contact us</legend>
                           <div class="form-group">
                               <%= f.label :name, class: "col-md-10 col-md-offset-1" %>
                           <div class="col-md-10 col-md-offset-1">
                               <%= f.text_field :name, autofocus: true ,:required => true, class: "form-control" %>
                           </div>
                          </div>
                        <div class="form-group">
                               <%= f.label :email, class: "col-md-10 col-md-offset-1" %>
                           <div class="col-md-10 col-md-offset-1">
                               <%= f.email_field :email, autofocus: true ,:required => true, class: "form-control" %>
                           </div>
                        </div> 

                        <div class="form-group">
                               <%= f.label :mobile_number, class: "col-md-10 col-md-offset-1" %>
                           <div class="col-md-10 col-md-offset-1">
                               <%= f.text_field :mobile_number, autofocus: true ,:required => true, class: "form-control" %>
                           </div>
                        </div> 

                        <div class="form-group">
                               <%= f.label :message, class: "col-md-10 col-md-offset-1" %>
                           <div class="col-md-10 col-md-offset-1">
                               <%= f.text_area :message, autofocus: true ,:required => true, class: "form-control" %>
                           </div>
                        </div> 

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <%= f.submit "Send message", class: 'btn btn-primary' %>
                            </div>
                        </div>
                    </fieldset>
                 <% end %></br>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <div class="panel panel-default">
                    <div class="text-center header">Our Office</div>
                    <div class="panel-body text-center">
                        <h4>Address</h4>
                        <div>
                        Maropost
                        2217 Ontario<br/>
                        Canada <br/>
                        #(703) 1234 1234<br />
                        service@maropost.com<br />
                        </div>
                        <hr />
                        <div id="map1" class="map">
                         <iframe
                          width="500"
                          height="500"
                          frameborder="10" style="border:0"
                          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDiuV0vMji0nfunvxCx30Dwtweqmkgqpak
                            &q=Space+Needle," allowfullscreen>
                        </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

