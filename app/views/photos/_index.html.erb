<div class="row">
  <% photos.in_groups_of(3) do |group| %>
    <% group.compact.each do |photo| %>
      <% cache(photo, :expires_in => 5.minutes) do %>
       <div class="col-lg-3 col-md-4 col-xs-6 thumb">
         <%= image_tag (photo.file_url), class: "img-sz" %>
           <h4><%= link_to photo.title, photo %></h4>
             <%= link_to "Edit", edit_photo_path(photo) , remote: true, class: "btn btn-default btn-xs" %>
              <%= link_to "delete", photo,remote: true, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger btn-xs" %></br></br>
       </div>
      <% end %>
    <% end %>
  <% end %> 
</div>
